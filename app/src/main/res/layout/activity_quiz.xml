<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Pergunta 1: Habilidade principal -->
        <TextView
            android:text="Qual sua principal habilidade?"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/radioGroupHabilidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/rbInteligencia" android:text="Inteligência" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbForca" android:text="Força" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbVelocidade" android:text="Velocidade" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Pergunta 2: Hobby -->
        <TextView
            android:text="O que você prefere fazer?"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerHobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Pergunta 3: Temperamento -->
        <TextView
            android:text="Como é seu temperamento?"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/radioGroupTemperamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/rbCalmo" android:text="Calmo" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbExplosivo" android:text="Explosivo" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbEstrategico" android:text="Estratégico" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Pergunta 4: Preferência de combate -->
        <TextView
            android:text="Qual seu tipo de combate favorito?"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerCombat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Pergunta 5: Usa capa? -->
        <CheckBox
            android:id="@+id/checkCapa"
            android:text="Você usaria uma capa?"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Pergunta 6: Nível de poder -->
        <TextView
            android:text="Qual seu nível de poder?"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/seekPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10" />

        <!-- Botão para ver resultado -->
        <Button
            android:id="@+id/btnResult"
            android:text="Ver Resultado"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
